<div class="d-flex justify-content-center mt-5 flex-column align-items-center">
    <h3 class="my-5">Assign Project Manager</h3>
    <div class="card">
        <div class="card-header">
            <div class="card-title">@Model.Ticket.Title</div>
        </div>
        <div class="card-body">
            <form asp-controller="Tickets" asp-action="AssignDev" method="post" class="d-flex flex-column">
                <input type="hidden" asp-for="@Model.Ticket.Id" />
                <select asp-items="Model.DevList" asp-for="DevId">
                    <option value="">Unassigned</option>
                </select>
                <button type="submit" class="btn btn-primary rounded-pill my-3">Assign</button>
                <a asp-action="Details" asp-route-ticketId="@Model.Ticket.Id" class="btn btn-primary rounded-pill my-3">Project Details</a>
            </form>
        </div>
    </div>
</div>