@model BugTracker.Models.Company
@using BugTracker.Services.Interfaces;
@using Microsoft.AspNetCore.Identity
@inject IProjectService _ProjectService;
@inject UserManager<BTUser> _UserManager;

@{
    ViewData["Title"] = "Edit";
    string userId = _UserManager.GetUserId(User);
    int companyId = await _ProjectService.GetCompanyId(userId);
}

<h1>Edit</h1>

<h4>Company</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageFileData" class="control-label"></label>
                <input asp-for="ImageFileData" class="form-control" />
                <span asp-validation-for="ImageFileData" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageFileType" class="control-label"></label>
                <input asp-for="ImageFileType" class="form-control" />
                <span asp-validation-for="ImageFileType" class="text-danger"></span>
            </div>
            <div class="form-group row mt-3 justify-content-between mx-1">
                <input type="submit" value="Save" class="btn btn-primary rounded-pill col-3" />
                <a asp-action="Details" asp-route-id="@companyId" class="btn btn-primary rounded-pill col-3">Never Mind</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
