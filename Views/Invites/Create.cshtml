@model BugTracker.Models.Invite

@{
    ViewData["Title"] = "Create";
}

<div class="row justify-content-center mt-5">
    <div class="col-lg-8 col-md-12">
        <div class="card p-3 rounded-3 shadow-lg">
            <div class="card-body">
                <div>
                    <h6 class="main-content-label mb-1">Company Invite</h6>
                    <p class="text-muted card-sub-title mb-3">Invite a new user to join your Company!</p>
                </div>
                <form asp-action="Create">
                    <div class="row row-xs align-items-center mg-b-20">
                        <div class="col-md-4">
                            <label class="mg-b-0">Email</label>
                        </div>
                        <div class="col-md-8 mg-t-5 mg-md-t-0 mb-3">
                            <input type="email" asp-for="InviteeEmail" class="form-control" placeholder="Enter email">
                        </div>
                    </div>
                    <div class="row row-xs align-items-center mg-b-20">
                        <div class="col-md-4">
                            <label class="mg-b-0">First Name</label>
                        </div>
                        <div class="col-md-8 mg-t-5 mg-md-t-0 mb-3">
                            <input type="text" asp-for="InviteeFirstName" class="form-control" placeholder="Enter first name">
                        </div>
                    </div>
                    <div class="row row-xs align-items-center mg-b-20">
                        <div class="col-md-4">
                            <label class="mg-b-0">Last Name</label>
                        </div>
                        <div class="col-md-8 mg-t-5 mg-md-t-0 mb-3">
                            <input type="text" asp-for="InviteeLastName" class="form-control" placeholder="Enter last name">
                        </div>
                    </div>
                    <div class="row row-xs align-items-center mg-b-20">
                        <div class="col-md-4">
                            <label class="mg-b-0">Select Project</label>
                        </div>
                        <div class="col-md-8 mg-t-5 mg-md-t-0 mb-3">
                            <select class="form-control" asp-for="ProjectId" asp-items="@ViewBag.ProjectId">
                                <option value="">Select Project</option>
                            </select>
                        </div>
                    </div>
                    <div class="row row-xs align-items-center mg-b-20">
                        <div class="col-md-4">
                            <label class="mg-b-0">Message</label>
                        </div>
                        <div class="col-md-8 mg-t-5 mg-md-t-0 mb-3">
                            <textarea asp-for="Message" multiple="multiple" class="form-control" rows="5"></textarea>
                        </div>
                    </div>
                    <div class="form-group row justify-content-between mt-4">
                        <input type="submit" class="btn ripple btn-primary pd-x-30 mg-r-5 col-3" value="Send Invite" />
                        <a asp-controller="Home" asp-action="Index" class="btn ripple btn-secondary pd-x-30 col-3">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

